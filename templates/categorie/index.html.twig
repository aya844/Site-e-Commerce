{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>Categories</h1>
        {% include 'layout/_flash_message.html.twig' %}
        <br>
        <table class="table">
            <tr>
                <th>id</th>
                <th>nom de la catégorie</th>
                <th>action</th>
            </tr>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a href="{{ path('app_categorie_update', {'id': categorie.id}) }}">Modifier</a>
                        <a href="{{ path ('app_categorie_delete', {'id': categorie.id})}}" class="text-danger">Supprimer</a>

                    </td>
                </tr>
            {% else %}
                <p>Aucune catégorie à afficher pour l'instant</p>
            {% endfor %}
        </table>
        <a class="btn btn-outline-primary" href="{{ path('app_categorie_new') }}">Ajouter une catégorie</a>
    </div>

{% endblock %}
