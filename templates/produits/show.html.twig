{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="container"> <br><br>
        <br>
        <h1>Détails du produit</h1>
        <br>
        {% include 'layout/_flash_message.html.twig' %}
    <div class="container">
        <br>
        <h1>Produits</h1>
        <br>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-outline-primary" href="{{ path('app_produits_index') }}">Retour à la liste</a>

        <a class="btn btn-outline-primary" href="{{ path('app_produits_edit', {'id': produit.id}) }}">Modifier</a>
        <a class="btn btn-outline-secondary" href="{{ path('app_produits_stock_add_historique', {'id': produit.id}) }}">Afficher l'historique du stock</a>
        {{ include('produits/_delete_form.html.twig') }}
    </div>
    </div>

{% endblock %}
